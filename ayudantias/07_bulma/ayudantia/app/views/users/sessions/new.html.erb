<section class="hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column">

        </div>
        <div class="column">
          <h2 class="title">Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'box'}) do |f| %>
            <div class="field">
              <%= f.label :email, class: 'label' %><br />
              <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password, class: 'label' %><br />
              <div class="control">
                <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: 'button is-link' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
        <div class="column">

        </div>
      </div>

    </div>
  </div>
</section>